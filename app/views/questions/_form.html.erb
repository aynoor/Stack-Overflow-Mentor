<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@question) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.label :explanation %>
      <%= f.text_area :explanation, cols: "30", rows: "7", class: 'form-control' %>

      <%= f.submit ( f.object.new_record? ? "Post" : "Update" ), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>