<% provide(:title, @question.description) %>
<div class="row">
  <div class="container">
  	<div class = "col-md-1">
  			<div class = "col-md-4">
  				<%= link_to "", like_question_path(@question), method: :put, 
  				class: "btn btn-sm btn-default", class: "glyphicon glyphicon-triangle-top", remote: true %>
  			</div>
  			<div class = "col-md-4", id = "upvotes">
  				<%= @question.total_upvotes %>
  			</div>
  			<div class = "col-md-4", id = "upvotes">
  				<%= link_to "", dislike_question_path(@question), method: :put, 
	    		class: "btn btn-sm btn-default", class: "glyphicon glyphicon-triangle-bottom", remote: true %>
  			</div>
  			<div class = "col-md-4", id = "downvotes">
  				<%= @question.total_downvotes %>
  			</div>
  	</div>
  	<div class = "col-md-11">
  		<div class="container">
  			<div class = "col-md-10">
  				<h3>  <%= @question.description %>  </h3>
  			</div> 
  			<div class = "col-md-2">
  				<% if can? :destroy, @question %>
  				<%= link_to "Delete", question_path(@question.id), method: :delete,  class: "btn btn-primary", 
  				data: { confirm: "Are you sure you want to delete this question?" } %>
  				<% end %>
  			</div> 
  		</div>
  		<div class = "container">
  			<div class = "col-md-10">
  				<p> <%= @question.explanation %> </p>
          <p id = "author_name"> by <%= @question.user.name %> </p>
  			</div>
  		</div>
  	</div>
  </div>
  <hr>
  <div class = "container">
    <h4> <%= pluralize(@question.answers.count, "Answer") %> </h4>
    <%= render partial: '/answers/index' %>
  </div>
  <div id = "answer_form">
    <% if user_signed_in? %>
      <%= render partial: '/answers/form' %>
    <% end %>
  </div>
  <br>
  <div class="container", id = "answer_error_msgs"></div>
</div>



